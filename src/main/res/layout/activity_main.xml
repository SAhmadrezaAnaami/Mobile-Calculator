<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/headerBTNS">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/headerBTN"
                android:text="@string/ExitBTN"
                android:id="@+id/BTNExit"
                >

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/headerBTN"
                android:text="@string/AboutUS"
                android:textSize="12dp"
                android:id="@+id/BTNAboutUs"
                >

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/headerBTN"
                android:text="@string/Tools"
                android:id="@+id/BTNTools"
                >

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/headerBTN"
                android:text="@string/manual"
                android:id="@+id/BTNManual"
                >

            </Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="@color/DarkGray"
                android:enabled="false"
                android:id="@+id/EditTextMainTOP"
                android:layout_marginLeft="30dp"
                >

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textSize="40dp"
                android:textAllCaps="true"
                android:textColor="@color/DarkGray"
                android:enabled="false"
                android:id="@+id/EditTextMain"
                >

            </EditText>


        </LinearLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainBodyTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="1"
                    style="@style/mainBTN"
                    android:id="@+id/btn1"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="2"
                    style="@style/mainBTN"
                    android:id="@+id/btn2"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="3"
                    style="@style/mainBTN"
                    android:id="@+id/btn3"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textSize="30dp"
                    style="@style/mainBTN"
                    android:id="@+id/btnC"
                    >

                </Button>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="4"
                    style="@style/mainBTN"
                    android:id="@+id/btn4"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="5"
                    style="@style/mainBTN"
                    android:id="@+id/btn5"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="6"
                    style="@style/mainBTN"
                    android:id="@+id/btn6"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0"
                    style="@style/mainBTN"
                    android:id="@+id/btn0"
                    >

                </Button>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="7"
                    style="@style/mainBTN"
                    android:id="@+id/btn7"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="8"
                    style="@style/mainBTN"
                    android:id="@+id/btn8"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="9"
                    style="@style/mainBTN"
                    android:id="@+id/btn9"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="+"
                    style="@style/mainBTN"
                    android:id="@+id/btnPlus"
                    >

                </Button>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="-"
                    style="@style/mainBTN"
                    android:id="@+id/btnMinus"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="*"
                    style="@style/mainBTN"
                    android:id="@+id/btnMulty"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="/"
                    style="@style/mainBTN"
                    android:id="@+id/btnDevide"
                    >

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:backgroundTint="#76777A"
                    android:text="="
                    style="@style/mainBTN"
                    android:textStyle="bold"
                    android:id="@+id/btnEqual"
                    >

                </Button>

            </LinearLayout>












        </LinearLayout>



    </LinearLayout>







</LinearLayout>
